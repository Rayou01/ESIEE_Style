<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ESIEEStyle" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/greyPrimary</item>
        <item name="android:textColorSecondary">@color/greySecondary</item>

        <item name="android:actionOverflowButtonStyle">@style/Base.Theme.ESIEEStyle</item>
    </style>

    <style name="Base.Theme.ESIEEStyle.Title">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Base.Theme.ESIEEStyle.Subheader">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Base.Theme.ESIEEStyle.Caption">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Base.Theme.ESIEEStyle.Logo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="Theme.ESIEEStyle" parent="Base.Theme.ESIEEStyle" />
</resources>